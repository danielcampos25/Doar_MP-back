
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Doador {
  id               Int       @id @default(autoincrement())
  email            String    @unique
  name             String
  doacoesEnviadas  Doacao[]  @relation("DoacoesEnviadas")
}

model Instituicao {
  id               Int       @id @default(autoincrement())
  email            String    @unique
  name             String
  doacoesRecebidas Doacao[]  @relation("DoacoesRecebidas")
}

model Doacao {
  id            Int         @id @default(autoincrement())
  doadorId      Int
  instituicaoId Int
  doador        Doador      @relation(fields: [doadorId], references: [id], name: "DoacoesEnviadas")
  instituicao   Instituicao @relation(fields: [instituicaoId], references: [id], name: "DoacoesRecebidas")
  produto       String
  quantidade    Int
  status        String
  postadoEm     DateTime
  recebidoEm    DateTime?
}
